<h1>New Appointment</h1>
<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form" ) do |f| %>
  <br />
  <%= f.label :user %>
  <%= f.select :user_id, @users.collect { |u| [u.full_name, u.id] } %>
  <br />
  <%= f.label :date %>
  <%= f.text_field :date, placeholder: "(MM/DD/YY)" %>
  <br />
  <%= f.label :time %>
  <%= f.text_field :time, placeholder: "(H:MM)" %>
  <br />
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
  <% end %>
